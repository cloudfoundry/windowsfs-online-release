$ErrorActionPreference = "Stop";
trap { $host.SetShouldExit(1) }

$ROOTFS_OS_VERSION = "2019"
$ROOTFS_OS_BUILD_NUMBER = "17763"
$HOST_OS_BUILD_NUMBER = [System.Environment]::OSVersion.Version.Build
if ($HOST_OS_BUILD_NUMBER -ne $ROOTFS_OS_BUILD_NUMBER) {
  echo "ERROR: Rootfs - Host OS version mismatch. Rootfs OS version: ${ROOTFS_OS_VERSION} (${ROOTFS_OS_BUILD_NUMBER}). Host build number: ${HOST_OS_BUILD_NUMBER}."
  Exit 1
}

$BOSH_INSTALL_TARGET = Resolve-Path "${env:BOSH_INSTALL_TARGET}"

$image_tag=(cat code.cloudfoundry.org/windows2016fs/$ROOTFS_OS_VERSION/IMAGE_TAG)
$image_name="cloudfoundry/windows2016fs"

c:\var\vcap\packages\hydrate\hydrate.exe download -image $image_name -tag $image_tag -noTarball -outputDir "$BOSH_INSTALL_TARGET"
if ($LastExitCode -ne 0) {
  Exit $LastExitCode
}

